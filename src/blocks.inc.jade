mixin header()
  header(block = 'header')
    .row(elem = 'site-info')
      .col1of5.v
        a(block = 'logotype', mix = 'block:header, elem:logotype', href = '/')
      .col3of5.v
        .row(block = 'contacts')
          .col1of3.h.v
            span +7 499 <b>502 61 27</b>
          .col1of3.h.v
            span +7 915 <b>236 34 49</b>
          .col1of3.h.v
            button(block = 'button', mod = 'size:small, type:main', mix = 'block:contacts, elem:button') Заказать звонок
      .col1of5.v
        +cart-widget()
    nav.row(elem = 'site-menu')
      .col3of7
        +search()
      .col4of7
        +site-menu()

    +catalog-menu()

mixin merch-matrix(data)
  - for merch in data
    +merch-thumb(merch)

mixin merch-thumb(data)
  div(block = 'merch-thumb')
    a(href != '#' + data.href)
      img(elem = 'image', src != '/i/content/merch/' + data.href + '.jpg')
    a(elem = 'price', href != '#' + data.href) #{data.price} руб.
    div(elem = 'preview')
      button(block = 'button', mod = 'size:small, type:main', data-remodal-target = 'merch') Быстрый просмотр

mixin pagination()
  .row(block = 'pagination')
    .col1of3.v(elem = 'prev')
      a(block = 'button', mod = 'size:medium, type:main') ❮ Популярнее
    .col1of3.v(elem = 'pages')
      ul(block = 'pages')
        li(elem = 'item') 1
        li(elem = 'item'): a(elem = 'link', href = '#') 2
        li(elem = 'item'): a(elem = 'link', href = '#') 3
        li(elem = 'item'): a(elem = 'link', href = '#') 4
        li(elem = 'item'): a(elem = 'link', href = '#') 5
    .col1of3.v(elem = 'next')
      a(block = 'button', mod = 'size:medium, type:main') Эксклюзивнее ❯

mixin search()
  input(block = 'input'
        mod = 'type:search'
        mix = 'block:site-nav, elem:search'
        type = 'text',
        placeholder = 'Поиск среди 1 283 товаров')

mixin side-menu(data)
  - if(data)
    dl(block = 'side-menu', mod = 'internal:true')
      - for group in data
        - if(group.items)
          dt(elem = 'item', mod = 'is:active'): a(elem = 'link', href = '#')= group.title
            - for item in group.items
              dd(elem = 'subitem'): a(elem = 'link', href = '#')= item
        - else
          dt(elem = 'item'): a(elem = 'link', href = '#')= group.title

  - else
    dl(block = 'side-menu')
      dt(elem = 'item'): a(elem = 'link', href = '#') Коллекция 2014

      dt(elem = 'item'): a(elem = 'link', href = '#') Для детей
      dd(elem = 'subitem'): a(elem = 'link', href = '#') 1...4 года
      dd(elem = 'subitem'): a(elem = 'link', href = '#') 3...9 лет
      dd(elem = 'subitem'): a(elem = 'link', href = '#') 6...10 лет
