      dd(elem = 'subitem'): a(elem = 'link', href = '#') Выпускные
      dd(elem = 'subitem'): a(elem = 'link', href = '#') Свадебные

      dt(elem = 'item'): a(elem = 'link', href = '#') Аксессуары
      dd(elem = 'subitem'): a(elem = 'link', href = '#') Для волос
      dd(elem = 'subitem'): a(elem = 'link', href = '#') Колготки
      dd(elem = 'subitem'): a(elem = 'link', href = '#') Накидки
      dd(elem = 'subitem'): a(elem = 'link', href = '#') Перчатки
