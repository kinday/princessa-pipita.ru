doctype html

html
  head
    meta(charset = 'utf-8')
    meta(http-equiv = 'content-type', content = 'text/html; charset=utf-8')

    meta(http-equiv = 'X-UA-Compatible', content = 'IE=edge,chrome=1')

    if document.title
      title #{document.title}

    meta(name = 'viewport', content = 'width=device-width, initial-scale=1')

    meta(name = 'keywords', lang = 'ru', content != document.keywords)
    meta(name = 'description', content != document.description)

    link(rel = 'stylesheet', href = '/s/screen.css')
    link(rel = 'stylesheet', href = 'http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.5.1/fotorama.css')

  body
    block content

    script(src = '//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')
    script(src = '/js/jquery.js')
    script(src = '/js/script.js')